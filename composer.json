{
  "name": "bartfeenstra/currency-exchange",
  "description": "A library for retrieving currency exchange rates.",
  "license": "MIT",
  "authors": [
    {
      "name": "Bart Feenstra",
      "email": "bart@mynameisbart.com"
    }
  ],
  "require": {
    "ext-bcmath": "*",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.0",
    "puli/cli": "~1.0",
    "satooshi/php-coveralls": "dev-master"
  },
  "suggest": {
    "bartfeenstra/currency-exchange-yahoo-finance": "Retrieves currency exchange rates from Yahoo! Finance.",
    "drupal/currency": "Integrates this package with Drupal.",
    "puli/repository": "Access resources through Puli.",
    "puli/discovery": "Access resources through Puli."
  },
  "autoload": {
    "psr-4": {
      "BartFeenstra\\CurrencyExchange\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BartFeenstra\\Tests\\CurrencyExchange\\": "tests/src"
    }
  },
  "minimum-stability": "beta"
}
